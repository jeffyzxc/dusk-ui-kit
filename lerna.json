{
  "version": "0.0.28-alpha.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*/**"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/storybook-views/**",
        "**/*.stories.js",
        "**/*.md"
      ],
      "message": "chore(release): publish",
      "registry": "https://npm.dusk.network:4873"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--pure-lockfile"
      ]
    }
  }
}
