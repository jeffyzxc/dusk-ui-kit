{
  "version": "2.0.0-rc.42",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "includeMergedTags": true,
  "packages": [
    "packages/helpers/**",
    "packages/atoms/*/**",
    "packages/molecules/*/**",
    "packages/organisms/*/**"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com/"
    },
    "version": {
      "allowBranch": ["main", "next"],
      "ignoreChanges": ["/storybook/*", "*.stories.*", "*.md"],
      "conventionalCommits": true
    }
  }
}
