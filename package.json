{
  "name": "dusk-ui-kit",
  "private": true,
  "description": "Dusk UI Kit",
  "homepage": "https://dusk-network.github.io/dusk-ui-kit/",
  "bugs": {
    "url": "https://github.com/dusk-network/issues"
  },
  "repository": "https://github.com/dusk-network/dusk-ui-kit",
  "license": "MPL-2.0",
  "author": "Kieran Hall <kieran@dusk.network>",
  "type": "module",
  "files": [],
  "workspaces": [
    "packages/**",
    "meta",
    "storybook"
  ],
  "scripts": {
    "format": "eslint . --ignore-pattern 'node_modules/' --ignore-pattern 'storybook-static/' --fix && prettier . --write --plugin-search-dir=. \"{,!(node_modules,storybook-static)/**/**/}*.{json,js,svelte}\"",
    "prepare": "is-ci || husky install",
    "release": "changeset publish",
    "changeset": "changeset",
    "stage": "lint-staged",
    "test": "echo \"Work in progress...\" && exit",
    "test:watch": "jest --watchAll",
    "version": "yarn changeset version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "scope",
        "breaking",
        "issues"
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|postcss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "debug": false
        }
      ]
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "chromatic": "^5.10.0",
    "commitizen": "^4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "prettier-plugin-svelte": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "svelte": "3.42.6",
    "svelte-jester": "^2.0.1",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^27.0.4"
  },
  "engines": {
    "node": "^14.16.0"
  }
}
